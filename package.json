{
	"name": "widgetify-webapp",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:chrome": "vite build --mode chrome",
		"build:firefox": "vite build --mode firefox",
		"preview": "vite preview",
		"start:chrome": "npm run build:chrome && web-ext run --source-dir=dist --target=chromium",
		"start:firefox": "npm run build:firefox && web-ext run --source-dir=dist --target=firefox-desktop",
		"package": "bun scripts/package-extension.js",
		"package:chrome": "bun scripts/package-extension.js chrome",
		"package:firefox": "bun scripts/package-extension.js firefox",
		"-------------node-------------": "echo 'Node.js packaging commands'",
		"package:node:firefox": "node --env-file .env scripts/package-extension.js firefox",
		"package:node:chrome": "node --env-file .env scripts/package-extension.js chrome"
	},
	"dependencies": {
		"@hello-pangea/dnd": "^18.0.1",
		"@tanstack/react-query": "^5.73.3",
		"axios": "1.8.4",
		"chart.js": "4.4.8",
		"jalali-moment": "3.3.11",
		"moment": "2.30.1",
		"moment-hijri": "3.0.0",
		"motion": "12.6.5",
		"ms": "2.1.3",
		"react": "19.1.0",
		"react-chartjs-2": "5.3.0",
		"react-colorful": "^5.6.1",
		"react-dom": "19.1.0",
		"react-ga4": "2.1.0",
		"react-hot-toast": "2.5.2",
		"react-icons": "5.5.0",
		"swiper": "11.2.6",
		"uuid": "11.1.0",
		"vite-plugin-web-extension": "4.4.3",
		"webextension-polyfill": "0.12.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@tailwindcss/vite": "^4.1.3",
		"@types/moment-hijri": "2.1.4",
		"@types/ms": "2.1.0",
		"@types/node": "22.14.1",
		"@types/react": "19.1.1",
		"@types/react-dom": "19.1.2",
		"@types/styled-jsx": "3.4.4",
		"@types/webextension-polyfill": "0.12.3",
		"@vitejs/plugin-react": "4.3.4",
		"autoprefixer": "10.4.21",
		"daisyui": "^5.0.35",
		"globals": "^16.0.0",
		"postcss": "8.5.3",
		"tailwindcss": "4.1.3",
		"typescript": "^5.8.3",
		"vite": "^6.2.6",
		"web-ext": "8.5.0"
	}
}
